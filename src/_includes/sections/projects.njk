{% set projects = [
    {
        title: 'SGF Covid Support',
        description: 'A project dedicated to helping people find pharmacies, food, and other support for the Covid-19 pandemic in Springfield, MO. Open SGF partnered with <a href="http://www.codeforchapelhill.com/" target="_blank" class="text-blue underline" title="Code for Chapel Hill website">Code for Chapel Hill</a> to help contribute to the project, and to bring the project to people here in Springfield, MO.',
        link: 'https://sgfcovidsupport.org/'
    }
] %}

<section class="projects">
    <div class="lg:container px-8 xl:px-12 background">
        <div class="flex justify-center mb-14 sm:mb-20">
            <h2 class="font-mono text-3xl sm:text-4xl md:text-5xl text-darkBlue pb-4 px-4 border-b-2 border-darkBlue border-solid">
                Projects
            </h2>
        </div>
        <div class="flex flex-wrap lg:-mx-12 -mb-16 lg:-mb-24">
            {% for project in projects %}
                <div class="w-full lg:w-1/2 lg:px-12 pb-16 lg:pb-24">
                    <div class="shadow-xl bg-white flex flex-col h-full justify-between p-6 lg:p-10 card">
                        <div>
                            <h3 class="font-mono text-2xl xl:text-3xl mb-4">{{ project.title }}</h3>
                            <p class="font-sans text-md xl:text-xl xl:leading-8">{{ project.description | safe }}</p>
                        </div>
                        <div class="flex w-full justify-end mt-4">
                            <a class="font-mono flex items-center card-link" href="{{ project.link }}">
                                <p class="mr-4 text-lg xl:text-xl">Learn More</p>
                                <span aria-hidden="true" class="w-6 xl:w-8">
                                    {% include 'svgs/long-arrow-right.svg' %}
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
